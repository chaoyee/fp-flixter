<div class="container-fluid">
	<div class="row">
		<div class="box col-xs-10 col-xs-offset-1">
			<h2><%= @course.title %></h2>
			<br>
			<div class="row">
				<div class="col-xs-12 col-sm-8">
					<% if @course.image.present? %>
						<%= image_tag @course.image.thumbnail, class: "course-thumbnail" %>
					<% end %>
					<p><%= @course.description %></p>
				</div>
				<div class="col-xs-12 col-sm-4 text-center">
					<h3><span class="label label-default"><%= number_to_currency @course.cost %></span></h3>
					<br>
					<% if current_user && current_user.enrolled_in?(@course) %>
						<h3><span class="label label-default">You're Enrolled!</span></h3>
					<% else %>	
						<%= link_to "Enroll", course_enrollments_path(@course), method: :post, class: "btn btn-success btn-lg" %>
					<% end %>
					<% if current_user == @course.user %>
						<br>
						<br>
						<%= link_to "Administer Course", instructor_course_path(@course), class: "btn btn-success btn-lg" %>
					<% end %>
				</div>
			</div>
			<hr>
			<div class="row">
				<div class="col-xs-12">
					<% @course.sections.each do |section| %>
						<div class="section">
							<h3><%= section.title %></h3>
							<ul>
								<% section.lessons.each do |lesson| %>
									<li>
										<%= link_to lesson_path(lesson) do %>
											<strong><%= lesson.title %></strong> - <%= lesson.subtitle %>
										<% end %>
									</li>
								<% end %>
							</ul>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>