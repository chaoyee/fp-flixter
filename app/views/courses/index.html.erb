<div class="container-fluid">
	<div class="row">
		<div class="box col-xs-10 col-xs-offset-1">
			<h2 class="text-center">Start Learning Today!</h2>
			<br>
			<% @courses.each do |course| %>
				<h3 class="text-center"><%= course.title %></h3>
				<br>
				<div class="row">
					<div class="col-xs-12 col-sm-8">
						<%= course.description %>
					</div>
					<div class="col-xs-12 col-sm-4 text-center">
						<%= link_to "Button", "#", class: "btn btn-success btn-lg" %>
					</div>
				</div>
				<hr>
			<% end %>
			<%= paginate @courses %>
		</div>
	</div>
</div>