<div class="container-fluid">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1 box">
			<h2><%= @lesson.title %></h2>
			<p><%= @lesson.subtitle %></p>
			<div class="row">
				<div class="col-xs-12 col-md-11 col-lg-9">
					<video id="video" class="video-js vjs-default-skin vjs-big-play-centered vjs-fluid hidden" controls preload="auto">
						<source src="<%= @lesson.video.url %>" type="video/mp4">
					</video>
				</div>
			</div>
			<br>
			<% if @lesson.next_lesson.present? %>
				<%= link_to lesson_path(@lesson.next_lesson), class: "btn btn-success pull-right" do %>
					Next Lesson <span class="glyphicon glyphicon-menu-right"></span>
				<% end %>
			<% end %>
		</div>
	</div>
</div>