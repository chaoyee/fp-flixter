<div class="container-fluid">
	<div class="row">
		<div class="box col-xs-10 col-xs-offset-1">
			<h2 class="text-center"><%= @course.title %></h2>
			<br>
			<%= link_to "Preview As Student", course_path(@course), class: "btn btn-success pull-right" %>
			<div class="clearfix"></div>
			<br>
			<div class="text-center">
				<%= link_to "Add Section", new_instructor_course_section_path(@course), class: "btn btn-success btn-lg" %>
			</div>
			<ul>
				<% @course.sections.each do |section| %>
					<li><%= section.title %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>