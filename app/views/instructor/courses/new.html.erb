<div class="container-fluid">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1 box">
			<h2>Enter Your Course Details</h2>
			<br>
			<%= simple_form_for @course, url: instructor_courses_path do |f| %>
				<%= f.input :title %>
				<%= f.input :image %>
				<%= f.input :description %>
				<%= f.input :cost, input_html: {min: 0.00, step: 0.01, max: 99999.99} %>
				<br>
				<%= f.submit "Create", class: "btn btn-success" %>
			<% end %>
		</div>
	</div>
</div>